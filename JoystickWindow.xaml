<Window x:Class="WpfApp4.JoystickWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="JoystickWindow" Height="477" Width="1034">
    <Grid Height="432" Margin="10,10,2,0" VerticalAlignment="Top">
        <Grid Margin="356,45,0,37" Height="350" VerticalAlignment="Center" HorizontalAlignment="Left" Width="624">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="79*"/>
                <ColumnDefinition Width="545*"/>
            </Grid.ColumnDefinitions>
            <Grid.Background>
                <ImageBrush ImageSource="gamepad_PNG67.png"/>
            </Grid.Background>
            <TextBlock x:Name="UpArrowBtn"   Margin="48,60,451,256"  Background="{x:Null}" Grid.Column="1"/>
            <TextBlock x:Name="RightArrowBtn"   Margin="95,95,414,215"  Background="{x:Null}" Grid.Column="1"/>
            <TextBlock x:Name="LeftArrowBtn"  Margin="11,95,499,212" Background="{x:Null}" Height="43" Grid.Column="1"/>
            <TextBlock x:Name="DownArrowBtn"   Margin="48,138,451,178"   Background="{x:Null}" Grid.Column="1"/>

            <TextBlock x:Name="LeftUpTriggerBtn" Text="4" TextAlignment="Center" HorizontalAlignment="Left" Margin="11,0,0,0" VerticalAlignment="Top" Width="120" Background="{x:Null}" Height="18" Padding="0" Grid.Column="1"/>
            <TextBlock x:Name="LeftDownTriggerBtn" Text="6" TextAlignment="Center" HorizontalAlignment="Left" Margin="11,-35,0,0" VerticalAlignment="Top" Width="120" Background="{x:Null}" Height="18" Padding="0" Grid.Column="1"/>
