            <Slider x:Name="HorizontalLeftJoy" HorizontalAlignment="Left" Margin="115,266,0,0" VerticalAlignment="Top" Width="70" Maximum="65535" Cursor="Arrow" IsEnabled="False" Value="180" BorderBrush="{x:Null}" Foreground="{x:Null}" Background="Black" Grid.Column="1"/>
            <Slider x:Name="HorizontalRightJoy" HorizontalAlignment="Left" Margin="280,266,0,0" VerticalAlignment="Top" Width="70" Maximum="65535" Cursor="Arrow" IsEnabled="False" Value="180" BorderBrush="{x:Null}" Foreground="{x:Null}" Background="Black" Grid.Column="1"/>
            <Slider x:Name="VerticalRightJoy" HorizontalAlignment="Left" Margin="346,189,0,0" VerticalAlignment="Top" Width="20" Maximum="65535" Cursor="Arrow" IsEnabled="False" Value="180" BorderBrush="{x:Null}" Foreground="{x:Null}" Background="Black" Orientation="Vertical" Height="58" Grid.Column="1"/>
            <Slider x:Name="VerticalLeftJoy" HorizontalAlignment="Left" Margin="91,188,0,0" VerticalAlignment="Top" Width="20" Maximum="65535" Cursor="Arrow" IsEnabled="False" Value="180" BorderBrush="{x:Null}" Foreground="{x:Null}" Background="Black" Orientation="Vertical" Height="59" Grid.Column="1"/>
            <TextBox x:Name="valuebox" TextWrapping="Wrap" HorizontalAlignment="Left" Height="383" Margin="-341,-33,0,0"  Text="TextBox" VerticalAlignment="Top" Width="335"/>
            <Image x:Name="btn11Image"  Height="59" Margin="280,188,195,103"  Width="70" Source="RedCircle.png" Grid.Column="1"/>
            <TextBlock  Margin="291,207,209,127"  Text="11" TextAlignment="Center" Grid.Column="1" />
            <Image x:Name="btn0Image" Margin="366,42,120,257" Source="RedCircle.png" Grid.Column="1"/>
            <TextBlock  Margin="371,60,129,274"  Text="0" TextAlignment="Center" Grid.Column="1" />
            <Image x:Name="btn1Image" Margin="416,91,68,208" Source="RedCircle.png" Grid.Column="1"/>
            <TextBlock  Margin="421,109,79,225"  Text="1" TextAlignment="Center" Grid.Column="1" />
            <Image x:Name="btn2Image" Margin="366,138,120,161" Source="RedCircle.png" Grid.Column="1"/>
            <TextBlock  Margin="371,156,129,178"  Text="2" TextAlignment="Center" Grid.Column="1" />
            <Image x:Name="btn3Image" Margin="312,91,170,208" Source="RedCircle.png" Grid.Column="1"/>
            <TextBlock  Margin="321,109,179,225"  Text="3" TextAlignment="Center" Grid.Column="1" />
            <Image x:Name="btn9Image" Margin="236,127,257,182" Source="RedCircle.png" Grid.Column="1"/>
            <TextBlock  Margin="239,138,263,196"  Text="9" TextAlignment="Center" Grid.Column="1" />
            <Image x:Name="btn8Image" Margin="178,126,316,182" Source="RedCircle.png" Grid.Column="1"/>
            <TextBlock  Margin="186,138,325,196"  Text="8" TextAlignment="Center" Grid.Column="1" />
            <Image x:Name="btn10Image"  Height="59" Margin="115,188,360,103"  Width="70" Source="RedCircle.png" Grid.Column="1"/>
            <TextBlock  Margin="126,207,374,127"  Text="10" TextAlignment="Center" Grid.Column="1" />
        </Grid>


    </Grid>
</Window>
